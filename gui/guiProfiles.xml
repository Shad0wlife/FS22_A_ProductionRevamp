    <Value name="textMaxNumLines" value="1"/>
    <Value name="textDisabledColor" value="1 0 0 1"/>
    
    <Variant name="mobile">
      <Value name="position" value="0px 40px"/>
      <Value name="textSize" value="33px"/>
      <Value name="textMaxWidth" value="320px"/>
    </Variant>
  </Profile>
  <Profile name="multiTextOptionSiloRevamp" extends="multiTextOption" with="anchorTopCenter">
    <Value name="size" value="508px 48px"/>
    <Value name="position" value="0px -110px"/>

    <Variant name="mobile">
      <Value name="size" value="800px 105px"/>
      <Value name="position" value="0px -200px"/>
    </Variant>
  </Profile>
  <Profile name="multiTextOptionBgSiloRevamp" extends="multiTextOptionBg">
    <Value name="size" value="412px 48px"/>

    <Variant name="mobile">
      <Value name="size" value="595px 105px"/>
    </Variant>
  </Profile>
  <!-- Production Animal Overview -->
  <Profile name="revampAnimalOverviewText" extends="textDefault" with="anchorBottomLeft">
    <Value name="textSize" value="17px"/>
    <Value name="textBold" value="true"/>
    <Value name="textAutoWidth" value="true"/>
    <Value name="textMaxWidth" value="220px"/>
    <Value name="textLayoutMode" value="resize"/>
    <Value name="size" value="0 45px" />
    <Value name="textVerticalAlignment" value="middle" />
    <Value name="textOffset" value="13px 0" />
  </Profile>
  <Profile name="revampAnimalOverviewValue" extends="textDefault" with="anchorBottomRight">
    <Value name="textSize" value="17px"/>
    <Value name="textBold" value="true"/>
    <Value name="textAutoWidth" value="true"/>
    <Value name="textMaxWidth" value="220px"/>
    <Value name="textLayoutMode" value="resize"/>
    <Value name="size" value="0 46px" />
    <Value name="textVerticalAlignment" value="middle" />
    <Value name="textOffset" value="-13px 0" />        
    <Value name="textAlignment" value="right"/>
